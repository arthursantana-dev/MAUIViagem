<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIViagem.Views.ConfirmarViagem"
             Title="ConfirmarViagem">
     <ScrollView><StackLayout>
       
            
        
        
        <Label Text="Origem"/>
        <Entry IsReadOnly="True" x:Name="textOrigem" Margin="0,0,0,40"/>

        <Label Text="Destino"/>
        <Entry IsReadOnly="True" x:Name="textDestino" Margin="0,0,0,40"/>

        <Label Text="Distância"/>
        <Entry IsReadOnly="True" x:Name="textDistancia" Margin="0,0,0,40"/>

        <Label Text="Rendimento"/>
        <Entry IsReadOnly="True" x:Name="textRendimento" Margin="0,0,0,40"/>

        <Label Text="Preco"/>
        <Entry IsReadOnly="True" x:Name="textPreco" Margin="0,0,0,40"/>

        <Label Text="Soma dos pedágios:"/>
        <Entry IsReadOnly="True" x:Name="textSomaPedagio" Margin="0,0,0,40"/>

        <Button x:Name="buttonConfirmarViagem" Text="Calcular Custo" Clicked="buttonConfirmarViagem_Clicked" />
        <Button x:Name="buttonNovaViagem" Text="Calcular Nova viagem" Clicked="buttonNovaViagem_Clicked"/>
    </StackLayout></ScrollView>
</ContentPage>