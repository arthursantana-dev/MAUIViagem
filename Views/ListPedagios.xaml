<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIViagem.Views.ListPedagios"
             Title="ListPedagios">
    <VerticalStackLayout Margin="8">
        <ListView x:Name="listPedagios">
            <ListView.Header>
                <Grid ColumnDefinitions="*, *">
                    <Label Grid.Column="0" Text="Local"/>
                    <Label Grid.Column="1" Text="Valor"/>
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid RowDefinitions="Auto" ColumnDefinitions="*, *">
                            <Label Grid.Row="0" Grid.Column="0" Text="{Binding Local}"/>
                            <Label Grid.Row="0" Grid.Column="1" Text="{Binding Valor}"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>